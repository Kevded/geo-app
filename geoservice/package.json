{
  "name": "geoservice",
  "version": "0.0.1",
  "description": "Recherche par communes, codes postaux, regions, en France",
  "author": "Deddy SAINT-VAL",
  "license": "MIT",
  "scripts": {
    "cpr": "./node_modules/.bin/cpr",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "rimraf dist && npm run build ",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch --debug",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --debug",
    "webpack": "webpack --config webpack.config.js",
    "xheroku-postbuild":"npm run build && cd ../typeahead-component && npm run build"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/serve-static": "^2.1.0",
    "@nestjs/typeorm": "^7.0.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.11.0",
    "dotenv": "^8.0.0",
    "latenize": "^0.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "sqlite3": "^4.1.0",
    "typeorm": "^0.2.7",
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.0",
    "@nestjs/testing": "^6.10.14",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^10.17.3",
    "@types/supertest": "^2.0.5",
    "codecov": "^3.6.1",
    "cpr": "^3.0.1",
    "jest": "24.9.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.14.2",
    "rimraf": "^2.7.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^8.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.20.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "env": {
    "NODE_ENV": "production"
  }
}
