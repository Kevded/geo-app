{
  "name": "geoservice",
  "version": "0.0.1",
  "description": "Recherche par communes, codes postaux, regions, en France",
  "author": "Deddy SAINT-VAL",
  "license": "MIT",
  "scripts": {
    "cpr": "./node_modules/.bin/cpr",
    "build": "tsc -p tsconfig.build.json && cpr src/public dist/public -o",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build ",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch --debug",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --debug",
    "webpack": "webpack --config webpack.config.js",
    "now-start": "npm run start:prod",
    "now-deploy": "now --public --name geo-app --alias geo-app.now.sh geo-app.fullstackiot.com",
    "now-alias":"now --alias geo-app.now.sh geo-app.fullstackiot.com"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.2",
    "@nestjs/core": "^6.5.2",
    "@nestjs/platform-express": "^6.5.2",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^5.3.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "latenize": "^0.2.0",
    "mysql": "^2.16.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.0.7",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "cpr": "^3.0.1",
    "jest": "^24.8.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "env": {
    "NODE_ENV": "production"
  }
}
